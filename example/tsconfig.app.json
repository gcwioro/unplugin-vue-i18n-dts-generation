{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*.ts",
    "src/**/*.json",
    //    "../src/**/*.ts",
    //    "../src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.vue"
  ],
  "exclude": [
    "src/**/__tests__/*"
    //    "../src/**/*.test.ts",
    //    "../node_modules",
    //    "../*.config.ts",
  ],

  "compilerOptions": {
    "rootDir": "./src",
    "useDefineForClassFields": true,
    "target": "esnext",
    "module": "esnext",
    "skipLibCheck": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "strict": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
      //      "I18Plugin": [
      //        "../src/**"
      //      ],
    }
  }
}
